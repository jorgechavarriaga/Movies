<div class="review">
    <p><%= review.rating %> </p>
    <p class="review-comment"><%= review.comment %> </p>
    <% if user_signed_in? %>
        <% if review.user_id == current_user.id %>
            <div class="links btn-group test">
                <%= link_to 'Edit', edit_play_review_path(review.play, review), class: "btn btn-custom" %>
                <%= button_to 'Delete', play_review_path(review.play, review),  form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: "btn btn-custom" %>
            </div>
            <hr>
        <% end %>
    <% end %>
</div>