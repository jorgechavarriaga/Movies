<%= simple_form_for([@play, @play.reviews.build]) do |f| %>
	<div id="rating-form">
		<label> Rating </label>
	</div>
    <%= f.input :comment %>
	<br>
    <%= f.button :submit, :class => "btn btn-custom2" %>
<% end %>

<script>
	$('#rating-form').raty({
		path: '/assets/',
		step: 0.5,
		scoreName: 'review[rating]'
	});
</script>